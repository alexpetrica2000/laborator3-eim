<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneDialerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/field_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:enabled="false"
            android:gravity="center"
            >

        </EditText>

        <ImageButton
            android:id="@+id/backspace_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="280dp"
            android:src="@drawable/backspace"
            android:background="@null"
            >
        </ImageButton>

        <GridLayout
            android:layout_width="match_parent"
            android:rowCount="4"
            android:columnCount="4"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/number_1_button"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginStart="40dp"
                android:text="@string/_1"
                android:background="#255">
            </Button>

            <Button
                android:id="@+id/number_2_button"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginStart="40dp"
                android:text="@string/_2"
                android:background="#255">
            </Button>

            <Button
                android:id="@+id/number_3_button"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_marginStart="40dp"
                android:text="@string/_3"
                android:background="#255">
            </Button>
            <Button
                android:id="@+id/number_4_button"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:text="@string/_4"
                android:background="#255">
            </Button>
            <Button
                android:id="@+id/number_5_button"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:text="5"
                android:background="#255">
            </Button>

            <Button
                android:id="@+id/number_6_button"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:text="6"
                android:background="#255">
            </Button>

            <Button
                android:id="@+id/number_7_button"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:text="7"
                android:background="#255">
            </Button>

            <Button
                android:id="@+id/number_8_button"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:text="8"
                android:background="#255">
            </Button>

            <Button
                android:id="@+id/number_9_button"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:text="9"
                android:background="#255">
            </Button>

            <Button
                android:id="@+id/number_star_button"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:text="*"
                android:background="#255">
            </Button>

            <Button
                android:id="@+id/number_0_button"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:text="0"
                android:background="#255">
            </Button>

            <Button
                android:id="@+id/number_diez_button"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:text="#"
                android:background="#255">
            </Button>
        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/call_button"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:background="#999"
                android:src="@drawable/call">

            </ImageButton>
            <ImageButton
                android:id="@+id/contacts_button"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:background="#999"
                android:src="@drawable/contacts">
            </ImageButton>

            <ImageButton
                android:id="@+id/hang_button"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:background="#999"
                android:src="@drawable/hangup">
            </ImageButton>



        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>